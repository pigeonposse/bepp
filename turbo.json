{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": [
				"^build",
				"^test"
			],
			"outputs": [
				"dist/**"
			]
		},
		"start": {
			"dependsOn": [
				"^start"
			]
		},
		"test": {
			"dependsOn": [
				"lint",
				"build"
			],
			"inputs": [
				"tests/**"
			]
		},
		"deploy": {
			"dependsOn": [
				"build",
				"test",
				"lint"
			]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
