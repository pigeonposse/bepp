{
	"name": "@bepp/core",
	"version": "0.1.0",
	"description": "Package your extension for multiple browsers quickly and easily",
	"type": "module",
	"bin": {
		"bepp/core": "./dist/main.js"
	},
	"files": [
		"dist"
	],
	"module": "dist/lib.js",
	"main": "dist/lib.js",
	"types": "dist/lib.d.ts",
	"exports": {
		"./types": "./dist/lib.d.ts",
		".": "./dist/lib.js",
		"./cli": "./dist/cli.js"
	},
	"scripts": {
		"dev": "pnpm build && pnpm preview",
		"preview": "node dist/main.js $@",
		"test": "vitest -r src --watch",
		"build": "pnpm schema && vite build",
		"schema": "node src/build/config/schema.js"
	},
	"devDependencies": {
		"@bepp/config": "workspace:*",
		"@types/appdmg": "0.5.5",
		"@types/archiver": "6.0.2",
		"@types/inquirer": "9.0.7",
		"@types/js-yaml": "4.0.9",
		"@types/node": "20.11.19"
	},
	"license": "GPL-3.0",
	"homepage": "https://bepp.pigeonposse.com/",
	"dependencies": {
		"@commander-js/extra-typings": "12.0.0",
		"@topcli/spinner": "2.1.2",
		"ajv": "8.12.0",
		"archiver": "6.0.1",
		"chalk": "5.3.0",
		"commander": "12.0.0",
		"compressing": "1.10.0",
		"inquirer": "9.2.12",
		"js-yaml": "4.1.0",
		"pino": "8.18.0",
		"pino-pretty": "10.3.1",
		"toml": "3.0.0"
	},
	"optionalDependencies": {
		"appdmg": "0.6.6"
	}
}
